## The function is currently defined as
function (x, order = 2, exclude = 0) 
{
    ret <- cbind(rep(1, length(x)))
    for (i in 1:order) ret <- cbind(ret, x^i)
    nam <- deparse(substitute(x))
    powers <- paste(nam, "^", 0:order, sep = "")
    powers[1] <- "Intercept"
    powers[2] <- nam
    dimnames(ret)[[2]] <- powers
    if (!is.null(exclude)) 
        ret <- ret[, -(1:(exclude + 1))]
    ret
  }
}
